<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="4dp"
    android:orientation="horizontal"
    android:padding="8dp"
    app:cardCornerRadius="5dp"
    app:cardMaxElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:paddingLeft="4dp">

        <ImageView
            android:id="@+id/img_logo_lt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/item_loaithu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/img_logo_lt"
            android:orientation="vertical"
            android:padding="4dp"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/tv_item_tenloaithu"
                style="@style/basicFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/roboto"
                android:singleLine="true"
                android:text="Loại thu 1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_item_maloaithu"
                style="@style/headlineFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:fontFamily="@font/roboto"
                android:singleLine="true"
                android:text="Ghi chú: Ghi chú 1"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_item_ghichuloaithu"
                style="@style/headlineFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:fontFamily="@font/roboto"
                android:singleLine="true"
                android:text="Ghi chú: Ghi chú 1"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_more_loaithu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_more_vert" />
    </RelativeLayout>

</android.support.v7.widget.CardView>