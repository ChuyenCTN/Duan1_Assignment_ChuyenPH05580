<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="18dp"
    android:orientation="vertical"
    android:padding="16dp"
    android:paddingLeft="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_showten_khoan"
            style="@style/basicFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/img_show_avatar_khoan"
            android:fontFamily="@font/roboto_regular"
            android:text="Name"
            android:textStyle="bold" />\

        <ImageView
            android:id="@+id/img_show_avatar_khoan"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/item_khoanthu" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_show_id_Khoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="Max sachs"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_show_loai_Khoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="The loai"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_show_sotien_Khoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="Tac gia"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_show_ngay_Khoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="NXB"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_show_ghichu_Khoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:text="So luong"
        android:textSize="16sp" />


</LinearLayout>